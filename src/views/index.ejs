
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="shortcut icon" href="img/fav.png">
		<title><%=title%></title>
		
		<!-- Bootstrap CSS -->
		<link href="css/bootstrap.min.css" rel="stylesheet" media="screen" />

		<!-- Main CSS -->
		<link href="css/main.css" rel="stylesheet" media="screen" />

		<!-- Ion Icons -->
		<link href="fonts/icomoon/icomoon.css" rel="stylesheet" />

		<!-- Data Tables -->
		<link rel="stylesheet" href="css/datatables/dataTables.bs.min.css">
		<link rel="stylesheet" href="css/datatables//autoFill.bs.min.css">
		<link rel="stylesheet" href="css/datatables/fixedHeader.bs.css">

		<!-- HTML5 shiv and Respond.js IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
			<script src="js/html5shiv.js"></script>
			<script src="js/respond.min.js"></script>
		<![endif]-->

	</head>

	<body>

		<!-- Header starts -->
		<header>

			<!-- Logo starts -->
			<a href="/" class="logo">
				<img src="img/logo.png" alt="Arise Admin Dashboard Logo" />
			</a>
			<!-- Logo ends -->

			<!-- Header actions starts -->
			<ul id="header-actions" class="clearfix">
				<li class="list-box user-admin hidden-xs dropdown">
					<div class="admin-details">
						<div class="name"><%= admin.username%></div>
						<div class="designation"><%= admin.nickname%></div>
					</div>
					<a id="drop4" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
						<i class="icon-user"></i>
					</a>
					<ul class="dropdown-menu sm">
						<li class="dropdown-content">
							<a href="profile.html">修改信息</a>
							<a href="forgot-pwd.html">修改密码</a>
							<a href="/logout">退出系统</a>
						</li>
					</ul>
				</li>
				<li>
					<button type="button" id="toggleMenu" class="toggle-menu">
						<i class="collapse-menu-icon"></i>
					</button>
				</li>
			</ul>
			<!-- Header actions ends -->
			<!-- <div class="custom-search hidden-sm hidden-xs">
				<input type="text" class="search-query" placeholder="Search here ...">
				<i class="icon-search3"></i>
			</div> -->
		</header>
		<!-- Header ends -->

		<!-- Left sidebar start -->
		<%- include('widgets/navigate', {
			nickname: admin.nickname
		}) %> 
		<!-- Left sidebar end -->

		<!-- Dashboard Wrapper Start -->
		<div class="dashboard-wrapper">

			<!-- Container fluid Starts -->
			<div class="container-fluid">

				<!-- Top Bar Starts -->
				<div class="top-bar clearfix">
					<div class="row gutter">
						<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
							<div class="page-title">
								<h3>后台首页</h3>
							</div>
						</div>
						<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
							<ul class="right-stats" id="mini-nav-right">
								<li>
									<a href="javascript:void(0)" class="btn btn-danger"><span>76</span>订单数</a>
								</li>
								<li>
									<a href="javascript:void(0)" class="btn btn-success">
										<span><%=goodsTotal%></span>商品数</a>
								</li>
								<li>
									<a href="javascript:void(0)" class="btn btn-info"><span><%= userTotal%></span>会员数</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<!-- Top Bar Ends -->

				<!-- Row Starts -->
				<div class="row gutter">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<div class="panel panel-blue">
							<div class="panel-heading">
								<h4>商品数据</h4>
							</div>
							<div class="panel-body">
								<div class="table-responsive">
									<div class="col-sm-12">
										<a href="" class="pull-right">查看更多<span class="icon-chevron-right"></span></a>
									</div>
									<table class="table table-striped table-condensed table-bordered no-margin">
										<thead>
										  <tr>
												<th>商品名称</th>
												<th>分类</th>
									      <th>图片</th>
									      <th>本店价格</th>
									      <th>市场价格</th>
									      <th>库存</th>
												<th>销量</th>
												<th>操作</th>
										  </tr>
										</thead>
										<tbody>
											<% for (let item of goodsList){ %>
										  <tr>
												<td><%= item.goodsName%></td>
												<td><%= item.cname%></td>
												<td><img src="<%= item.goodsImg%>" height="80"/></td>
												<td>$<%= item.goodsPrice%></td>
												<td>$<%= item.marketPrice%></td>
												<td><%= item.stock%></td>
												<td><%= item.saleNum%></td>
												<td></td>
											</tr>
											<% }%>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Row Ends -->

				<!-- Row Starts -->
				<div class="row gutter">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<div class="panel panel-blue">
							<div class="panel-heading">
								<h4>会员数据</h4>
							</div>
							<div class="panel-body">
								<div class="table-responsive">
									<table class="table table-striped table-bordered no-margin" cellspacing="0" width="100%">
										<thead>
										  <tr>
									      <th>账号</th>
									      <th>昵称</th>
									      <th>头像</th>
									      <th>注册时间</th>
									      <th>最近登录</th>
									      <th>来源</th>
										  </tr>
										</thead>
										<tbody>
											<% for (let item of userlist){ %>
										  <tr>
												<td><%= item.username || item.openid%></td>
												<td><%= item.nickname%></td>
												<td>
													<% if(item.avatar){ %> 
														<img src="item.avatar" height="80"/>
													<% } %> 
												</td>
												<td><%= item.regTime %> </td>
												<td><%= item.lastLoginTime %> </td>
												<td><%= item.openid !== '' ? '微信' : '网页'%></td>
										  </tr>
											<% }%>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Row Ends -->

				<!-- Row Starts -->
				<div class="row gutter">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
						<div class="panel panel-blue">
							<div class="panel-heading">
								<h4>订单数据</h4>
							</div>
							<div class="panel-body">
								<div class="table-responsive">
									<table id="fixedHeader" class="table table-striped table-bordered no-margin" cellspacing="0" width="100%">
										<thead>
										  <tr>
									      <th>Name</th>
									      <th>Position</th>
									      <th>Office</th>
									      <th>Age</th>
									      <th>Start date</th>
									      <th>Salary</th>
										  </tr>
										</thead>
										<tbody>
										  <tr>
												<td>Tiger Nvimn</td>
												<td>System Architect</td>
												<td>Edinburgh</td>
												<td>61</td>
												<td>2011/04/25</td>
												<td>$320,800</td>
										  </tr>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Row Ends -->

			</div>
			<!-- Container fluid ends -->
			
		</div>
		<!-- Dashboard Wrapper End -->

		<!-- Footer Start -->
		<footer>
			Copyright <a href="http://www.###.com/">Arise</a> Admin <span>2020</span>
		</footer>
		<!-- Footer end -->

		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="https://cdn.bootcss.com/jquery/3.5.0/jquery.min.js"></script>

		<!-- Include all compiled plugins (below), or include individual files as needed -->
		<script src="js/bootstrap.min.js"></script>
		
		<!-- jquery ScrollUp JS -->
		<script src="js/scrollup/jquery.scrollUp.js"></script>

		<!-- Sparkline Graphs -->
		<script src="js/sparkline/sparkline.js"></script>
		<script src="js/sparkline/custom-sparkline.js"></script>

		<!-- Custom JS -->
		<script src="js/custom.js"></script>
	</body>
</html>