<script>
  function layer_window (title, url, w, h) {
    if (title == null || title == '') {
      title = false;
    }
    if (url == null || url == '') {
      url = "/404";
    }
    if (w == null || w == '') {
      w = 1200;
    }
    if (h == null || h == '') {
      h=($(window).height() - 50);
    }
    layer.open({
      type: 2,
      area: [w+'px', h +'px'],
      fix: false,
      maxmin: true,
      shade:0.4,
      title: title,
      content: url
    })
  }

  function layer_full_window (title = '', url = '/404') {
    var index = layer.open({
      type: 2,
      title: title,
      content: url
    });
	  layer.full(index);
  }
</script>